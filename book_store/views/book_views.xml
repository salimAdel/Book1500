<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_book_view_list" model="ir.ui.view">
        <field name="name">library.book.view.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Book">
                <field name="name_ar"/>
                <field name="name_en"/>
                <field name="name_ind"/>
                <field name="author_ar"/>
                <field name="author_en"/>
                <field name="author_ind"/>
                <field name="number_of_pages"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="image" widget='image' class="oe_avatar" />
                        <field name="name_ar"/>
                        <field name="name_en"/>
                        <field name="name_ind"/>
                        <field name="author_ar"/>
                        <field name="author_en"/>
                        <field name="author_ind"/>
                        <field name="number_of_pages"/>
                        <field name="category_id"/>
                        <field name="file_ar" />
                        <field name="file_en" />
                        <field name="file_ind" />
                    </group>

                    <group>
                        <field name="description_ar"/>
                        <field name="description_en"/>
                        <field name="description_ind"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
