<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_book_view_list" model="ir.ui.view">
        <field name="name">library.book.view.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Book">
                <field name="name"/>
                <field name="author"/>
                <field name="number_of_pages"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="number_of_pages"/>
                        <field name="category_ids" widget="many2many_tags"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>

                    <notebook>
                        <page string="Book PDF">
                            <field name="file_ids">
                                <list editable="bottom">
                                    <field name="lang_id"/>
                                    <field name="pdf_file"/>
                                </list>
                                <form string="Book File">
                                    <group>
                                        <field name="lang_id"/>
                                        <field name="pdf_file" filename="filename" widget="pdf"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
